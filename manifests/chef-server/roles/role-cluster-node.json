{
  "name": "role-cluster-node",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "default_attributes": {
  },
  "description": "Base Cluster Node Role",
  "run_list": [
    "recipe[apt::default]",
    "recipe[rvm::system]",
    "recipe[rvm::vagrant]",
    "recipe[nodejs::install_from_binary]",
    "recipe[nodejs::npm]",
    "recipe[golang]",
    "recipe[docker]",
    "recipe[java::oracle]",
    "recipe[scala]",
    "recipe[maven]"
    "recipe[chef-client]",
  ],
  "env_run_lists" : {},
  "override_attributes": {

    "rvm": {
      "rubies": [
        "ruby-1.9.3-p327"
      ],
      "global_gems": [
        {"name": "chef"},
        {"name": "chef-zero"},
        {"name": "fpm"}
      ],
      "user_global_gems": [
        {"name": "chef"},
        {"name": "chef-zero"},
        {"name": "fpm"}
      ],
      "user_installs": [
        { "user" : "vagrant",
          "default_ruby": "ruby-1.9.3-p327",
          "rvm_gem_options" : "",
          "global_gems"     : [
            {"name": "fpm"}
          ]
        }
      ],
      "gems":{
        "ruby-1.9.3-p327":[
          {"name": "fpm"}
        ]
      }
    },
    
    "java": {
      "install_flavor": "oracle",
      "oracle": {
        "accept_oracle_download_terms": true
      },
      "jdk_version": "7"
    },

    "maven": {
      "setup_bin": true,
      "m2_home": "/usr/bin/maven",
      "version": "3",
      "3": {
        "url": "http://mirror.reverse.net/pub/apache/maven/maven-3/3.1.1/binaries/apache-maven-3.1.1-bin.tar.gz"
      }
    },

    "scala": {
      "version": "2.10.3",
      "url": "http://www.scala-lang.org/files/archive/scala-2.10.3.tgz"
    }

  }
}