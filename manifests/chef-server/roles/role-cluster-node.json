{
  "name": "role-cluster-node",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "default_attributes": {
  },
  "description": "Base Cluster Node Role",
  "run_list": [
    "recipe[apt::default]",
    "recipe[rvm::system]",
    "recipe[rvm::vagrant]",
    "recipe[nodejs::install_from_binary]",
    "recipe[nodejs::npm]",
    "recipe[golang]",
    "recipe[docker]",
    "recipe[java::oracle]",
    "recipe[scala]",
    "recipe[maven]"
    "recipe[chef-client]",
  ],
  "env_run_lists" : {},
  "override_attributes": {
    "chef_server_url": "https://10.10.10.10",
    "node_name": "dev-node",

    "rvm": {
      "rubies": [
      ],
      "global_gems": [
        {"name": "chef"},
        {"name": "chef-zero"}
      ]
    },

    "java": {
      "install_flavor": "oracle",
      "oracle": {
        "accept_oracle_download_terms": true
      },
      "jdk_version": "7"
    },

    "maven": {
      "version": "3",
      "3": {
        "url": "http://mirror.reverse.net/pub/apache/maven/maven-3/3.1.1/binaries/apache-maven-3.1.1-bin.tar.gz"
      }
    },

    "scala": {
      "version": "2.10.3",
      "url": "http://www.scala-lang.org/files/archive/scala-2.10.3.tgz"
    }

  }
}